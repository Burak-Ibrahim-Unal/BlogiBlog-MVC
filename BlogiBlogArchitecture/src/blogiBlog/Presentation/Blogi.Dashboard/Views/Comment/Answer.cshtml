@model Blogi.Application.Features.Comment.Dtos.Get.GetCommentOutput
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="xp-breadcrumbbar">
            <div class="row">
                <div class="col-md-6 col-lg-6">
                    <h4 class="xp-page-title">
                        <a asp-controller="Dashboard" asp-action="Home" style="color: #8A98AC"><i class="icon-home"></i> @Localize("bread_crumb_home")</a>
                    </h4>
                </div>
                <div class="col-md-6 col-lg-6">
                    <div class="xp-breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a asp-controller="Comment" asp-action="Home"><i class="icon-home"></i></a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">
                                <a asp-controller="Comment" asp-action="Home">@Localize("page_comment_label_back_to_list")</a>
                            </li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<br />


<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <form asp-controller="Comment" asp-action="Edit" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    <input type="hidden" asp-for="Id" name="Id" />

                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">Category</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" asp-for="CategoryName">
                            <span class="text-danger" asp-validation-for="CategoryName"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">Post Name</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" asp-for="PostName">
                            <span class="text-danger" asp-validation-for="PostName"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">Sender Name Surname</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" asp-for="FullName" required>
                            <span class="text-danger" asp-validation-for="FullName"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">Sender Email</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" asp-for="Email" required>
                            <span class="text-danger" asp-validation-for="Email"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">IsPublish</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" asp-for="IsPublish" required>
                            <span class="text-danger" asp-validation-for="IsPublish"></span>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success btn-rounded btn-lg btn-block"> Create<i class="mdi mdi-plus ml-2"></i></button>
                </form>
            </div>
        </div>
    </div>
</div>