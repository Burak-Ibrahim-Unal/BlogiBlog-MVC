@{
    ViewData["Title"] = "Category List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<partial name="_breadCrumb" />

<div class="row">
    <div class="col-12">
        <div class="card m-b-30">
            <div class="card-header bg-secondary" style="color:white">
                <ul class="list-inline mb-0">
                    <li class="list-inline-item">  <i class='ion ion-ios-information-circle'></i> Category List</li>
                    <li class="list-inline-item float-right">
                        <a asp-controller="Category" asp-action="Create" class="btn btn-rounded btn-success">Create New Category <i class="mdi mdi-plus ml-2"></i></a>
                    </li>
                </ul>
            </div>
            <div class="card-body">
                <div class="table-responsive m-b-30">
                    <table class="table table-hover" id="categoryTable">
                        <thead>
                            <tr>
                                <th>Language</th>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Slug</th>
                                <th>Update</th>
                                <th>Delete</th>

                            </tr>
                        </thead>

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
<script src="~/js/views/category/home.js" asp-append-version="true"></script>
}

