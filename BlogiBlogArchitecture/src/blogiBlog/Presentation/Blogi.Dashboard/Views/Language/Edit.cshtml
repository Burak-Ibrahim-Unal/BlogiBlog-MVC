
@{
    ViewData["Title"] = "Language Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model Blogi.Application.Features.Languages.Dtos.Get.GetLanguageOutput

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <form asp-controller="Language" asp-action="Edit" method="post">
                     <input type="hidden" asp-for="Id" name="Id" />
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">Name</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" asp-for="Name" required>
                            <span class="text-danger" asp-validation-for="Name"></span>
                        </div>
                    </div>

                      <div class="form-group row">
                        <label class="col-sm-4 col-form-label">Culture</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" asp-for="Culture" required>
                            <span class="text-danger" asp-validation-for="Culture"></span>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-block btn-warning"> Update<i class="mdi mdi-plus ml-2"></i></button>
                </form>
            </div>
        </div>
    </div>
</div>


