@model Blogi.Application.Features.Languages.Commands.Create.CreateLanguageCommand
@{
    ViewData["Title"] = "Language Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="xp-breadcrumbbar">
            <div class="row">
                <div class="col-md-6 col-lg-6">
                    <h4 class="xp-page-title">
                        <a asp-controller="Dashboard" asp-action="Home" style="color: #8A98AC"><i class="icon-home"></i> @Localize("bread_crumb_home")</a>
                    </h4>
                </div>
                <div class="col-md-6 col-lg-6">
                    <div class="xp-breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a asp-controller="Language" asp-action="Home"><i class="icon-home"></i></a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">
                                <a asp-controller="Language" asp-action="Home">@Localize("page_language_label_back_to_list")</a>
                            </li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<br />

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <form asp-controller="Language" asp-action="Create" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>                    
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">@Localize("page_language_label_lang_name")</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" asp-for="Name" required>
                            <span class="text-danger" asp-validation-for="Name"></span>
                        </div>
                    </div>
                      <div class="form-group row">
                        <label class="col-sm-4 col-form-label">@Localize("page_language_label_culture")</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" asp-for="Culture" required>
                            <span class="text-danger" asp-validation-for="Culture"></span>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success btn-rounded btn-lg btn-block"> @Localize("page_language_button_create")<i class="mdi mdi-plus ml-2"></i></button>
                </form>
            </div>
        </div>
    </div>
</div>