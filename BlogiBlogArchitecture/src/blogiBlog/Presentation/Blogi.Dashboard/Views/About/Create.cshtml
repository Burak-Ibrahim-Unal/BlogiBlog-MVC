@model Blogi.Dashboard.Models.AboutCreateViewModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="xp-breadcrumbbar">
            <div class="row">
                <div class="col-md-6 col-lg-6">
                    <h4 class="xp-page-title">
                        <a asp-controller="Dashboard" asp-action="Home" style="color: #8A98AC"><i class="icon-home"></i> @Localize("page_default_label_home")</a>
                    </h4>
                </div>
                <div class="col-md-6 col-lg-6">
                    <div class="xp-breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a asp-controller="About" asp-action="Home"><i class="icon-home"></i></a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">
                                <a asp-controller="About" asp-action="Home">@Localize("page_default_back_to_list")</a>
                            </li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<br />

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <form asp-controller="About" asp-action="Create" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    <fieldset class="form-group">
                        <div class="row">
                            <div class="col-form-label col-sm-4 pt-0">@Localize("page_default_label_language")</div>
                            <div class="col-sm-8">
                                <select asp-for="AboutCommand.LanguageId" class="form-control" required>
                                    <option selected="selected" value="0">@Localize("page_default_label_select_language")</option>
                                    @foreach (var item in Model.LanguageList)
                                    {
                                        <option value="@item.Id">@item.Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </fieldset>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">@Localize("page_web_setting_label_title")</label>
                        <div class="col-sm-8">
                            <input asp-for="AboutCommand.Title" type="text" class="form-control" required>
                            <span class="text-danger" asp-validation-for="AboutCommand.Title"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">@Localize("page_post_label_seo")</label>
                        <div class="col-sm-8">
                            <input asp-for="AboutCommand.Slug" type="text" class="form-control" required>
                            <span class="text-danger" asp-validation-for="AboutCommand.Slug"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">@Localize("page_web_setting_label_meta_description")</label>
                        <div class="col-sm-8">
                            <input asp-for="AboutCommand.MetaDescription" type="text" class="form-control" required>
                            <span class="text-danger" asp-validation-for="AboutCommand.MetaDescription"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">@Localize("page_web_setting_label_meta_keywords")</label>
                        <div class="col-sm-8">
                            <input asp-for="AboutCommand.MetaKeywords" type="text" class="form-control" required>
                            <span class="text-danger" asp-validation-for="AboutCommand.MetaKeywords"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-12">
                            <textarea id="xp-tinymce" asp-for="AboutCommand.Content"></textarea>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-success btn-rounded btn-lg btn-block"> @Localize("page_default_button_create")<i class="mdi mdi-plus ml-2"></i></button>
                </form>
            </div>
        </div>
    </div>
</div>